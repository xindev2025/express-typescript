#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

npx lint-staged

# Run lint-staged (ESLint + Prettier)
npx lint-staged
if [ $? -ne 0 ]; then
  echo "❌ Lint-staged failed. Commit aborted."
  exit 1
fi

echo "✅ Lint-staged passed!"

# Run tests only if lint passes
npm test
if [ $? -ne 0 ]; then
  echo "❌ Tests failed. Commit aborted."
  exit 1
fi

echo "✅ All checks passed!"